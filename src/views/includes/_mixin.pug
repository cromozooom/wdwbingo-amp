mixin stars(count, marginClass)
	ul.company-rating-star.list-inline.d-inline-block.m-0
		if count == 0
			+star("empty")
			+star("empty")
			+star("empty")
			+star("empty")
			+star("empty")
		if count == 1
			+star("full")
			+star("empty")
			+star("empty")
			+star("empty")
			+star("empty")
		if count == 2
			+star("full")
			+star("full")
			+star("empty")
			+star("empty")
			+star("empty")
		if count == 3
			+star("full")
			+star("full")
			+star("full")
			+star("empty")
			+star("empty")
		if count == 4
			+star("full")
			+star("full")
			+star("full")
			+star("full")
			+star("empty")
		if count == 5
			+star("full")
			+star("full")
			+star("full")
			+star("full")
			+star("full")

