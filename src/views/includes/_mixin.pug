mixin html(amp)
	if amp
		html(⚡, lang='en')
			block
	else
		html(lang='en')
			block
mixin star(color)
	if color == "full"
		li.star.list-inline-item.mr-0: amp-img(src="images/stars/fstar.png" width="20" height="20" layout="responsive")
	if color == "empty"
		li.star.list-inline-item.mr-0: amp-img(src="images/stars/estar.png" width="20" height="20" layout="responsive")

